pipeline {
    agent any 
    tools {
        nodejs 'nodejs'
    }
    environment  {
        SCANNER_HOME = tool 'sonar-scanner'
        GIT_REPO_NAME = "Merneat"
        GIT_USER_NAME = "radhe203"
    }
    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git credentialsId: 'GITHUB', url: 'https://github.com/radhe203/Merneat.git' ,branch: 'devops-merneat'
            }
        }
        stage('Sonarqube Analysis') {
            steps {
                dir('Application/api') {
                    withSonarQubeEnv('sonar-server') {
                        sh '''
                            $SCANNER_HOME/bin/sonar-scanner \
                            -Dsonar.projectName=merneat_backend \
                            -Dsonar.projectKey=merneat_backend
                        '''
                    }
                }
            }
        }
        stage('Quality Check') {
            steps {
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token' 
                }
            }
        }
        stage('Trivy File Scan') {
            steps {
                dir('Application/api') {
                    sh 'trivy fs . > trivy-backend-fs.txt'
                }
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('Application/api') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh "docker build -t radhe2003/merneat_backend:${BUILD_NUMBER} ."
                    }
                }
            }
        }
        stage("Docker Image Pushing") {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
                        sh "docker push radhe2003/merneat_backend:${BUILD_NUMBER}"
                    }
                }
            }
        }
        stage("TRIVY Image Scan") {
            steps {
                script {
                    def scanResult = sh(script: "trivy image --no-progress radhe2003/merneat_backend:${BUILD_NUMBER}", 
                        returnStdout: true)

                    writeFile file: 'trivyimage.txt', text: scanResult

                    echo scanResult
                }
            }
        }
        stage('Checkout Code') {
            steps {
                git credentialsId: 'GITHUB', url: 'https://github.com/radhe203/Merneat.git' , branch: 'devops-merneat'
            }
        }
        stage('Update Deployment file') {
            steps {
                dir('k8s/Backend') {
                    withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                        sh '''
                            git config user.email "radheshyamjio52@gmail.com"
                            git config user.name "radheshyam"
                            sed -i "s|image: radhe2003/merneat_backend:.*|image: radhe2003/merneat_backend:${BUILD_NUMBER}|" Deployment.yaml
                            git add Deployment.yaml
                            git commit -m "Update Backend/Deployment.yaml Image to version ${BUILD_NUMBER}"
                            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} -u origin devops-merneat
                        '''
                    }
                }
            }
        }
    }
}